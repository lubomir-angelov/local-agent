# OpenAI-compatible endpoint (vLLM)
OPENAI_API_BASE=http://localhost:8000/v1
OPENAI_API_KEY=token-local-dev

# Aider: tell it to use OpenAI-compatible provider + your served model name
AIDER_MODEL=openai/qwen2.5-coder-32b-awq

# Monorepo defaults
AIDER_MAP_TOKENS=2048

# Keep changes controlled
AIDER_AUTO_COMMITS=false

# Lint/Test wiring (see Step B4)
AIDER_AUTO_LINT=true
# Per-language lint command (Aider will append filenames)
AIDER_LINT_CMD=python: ./tools/sbx ruff check

# Test command (Aider runs it with no extra args)
AIDER_TEST_CMD=./tools/sbx pytest -q
AIDER_AUTO_TEST=false
